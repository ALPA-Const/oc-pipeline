{
  "name": "shadcnui",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint --quiet ./src",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "test": "vitest run && playwright test",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:contract": "vitest run tests/contracts",
    "test:rls": "vitest run tests/rls",
    "test:perf": "vitest run tests/performance",
    "test:security": "pnpm audit --audit-level=moderate && eslint . --ext .ts,.tsx",
    "validate:schemas": "ajv-cli validate -s src/schemas/Project.json -d tests/fixtures/project.json && ajv-cli validate -s src/schemas/ActionItem.json -d tests/fixtures/action-item.json && ajv-cli validate -s src/schemas/Event.json -d tests/fixtures/event.json && ajv-cli validate -s src/schemas/Health.json -d tests/fixtures/health.json && ajv-cli validate -s src/schemas/PortfolioCard.json -d tests/fixtures/portfolio-card.json",
    "ci:stage1": "pnpm run validate:schemas && pnpm run test:contract && pnpm run test:rls && pnpm run test:perf && pnpm run test:security"
  },
