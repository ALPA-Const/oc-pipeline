{
  "name": "oc-pipeline-backend",
  "version": "1.0.0",
  "description": "Backend API server for OC Pipeline construction management platform",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "render-build": "pnpm install --include=dev && pnpm run build",
    "render-build:npm": "npm install --include=dev && npm run build"
  },
  "keywords": [
    "construction",
    "pipeline",
    "management",
    "api"
  ],
  "author": "OC Pipeline Team",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.81.0",
    "axios": "^1.13.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.19.24",
    "@types/pg": "^8.15.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "pnpm": "^8.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
