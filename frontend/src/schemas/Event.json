{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://alpa-construction.com/schemas/Event.json",
  "title": "Event",
  "description": "Immutable audit event for activity tracking",
  "type": "object",
  "required": [
    "id",
    "org_id",
    "timestamp",
    "actor_id",
    "action",
    "entity_type",
    "entity_id"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique event identifier (UUID v4)"
    },
    "org_id": {
      "type": "string",
      "format": "uuid",
      "description": "Organization ID (for RLS isolation)"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Event timestamp (ISO 8601, UTC)"
    },
    "actor_id": {
      "type": "string",
      "format": "uuid",
      "description": "User who performed the action"
    },
    "actor_role": {
      "type": "string",
      "enum": ["admin", "exec", "pm", "pe", "super", "precon", "sub", "client", "system"],
      "description": "Actor's role at time of action"
    },
    "action": {
      "type": "string",
      "enum": [
        "created",
        "updated",
        "deleted",
        "archived",
        "unarchived",
        "status_changed",
        "assigned",
        "unassigned",
        "commented",
        "approved",
        "rejected",
        "exported",
        "imported",
        "viewed",
        "downloaded",
        "uploaded"
      ],
      "description": "Action performed"
    },
    "entity_type": {
      "type": "string",
      "enum": [
        "project",
        "action_item",
        "user",
        "document",
        "budget",
        "schedule",
        "safety_incident",
        "quality_defect",
        "change_order",
        "rfi",
        "submittal"
      ],
      "description": "Type of entity affected"
    },
    "entity_id": {
      "type": "string",
      "format": "uuid",
      "description": "ID of affected entity"
    },
    "project_id": {
      "type": ["string", "null"],
      "format": "uuid",
      "description": "Associated project ID (if applicable)"
    },
    "changes": {
      "type": "object",
      "description": "Snapshot of changes (before/after)",
      "properties": {
        "before": {
          "type": "object",
          "additionalProperties": true
        },
        "after": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "ip_address": {
          "type": "string",
          "format": "ipv4"
        },
        "user_agent": {
          "type": "string",
          "maxLength": 500
        },
        "trace_id": {
          "type": "string",
          "format": "uuid",
          "description": "Request trace ID for correlation"
        },
        "session_id": {
          "type": "string",
          "format": "uuid"
        }
      }
    },
    "pii_redacted": {
      "type": "boolean",
      "default": false,
      "description": "Whether PII has been redacted from this event"
    }
  },
  "additionalProperties": false
}