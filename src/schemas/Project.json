{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://alpa-construction.com/schemas/Project.json",
  "title": "Project",
  "description": "Construction project entity with complete lifecycle tracking",
  "type": "object",
  "required": [
    "id",
    "project_number",
    "name",
    "org_id",
    "status",
    "type",
    "created_at",
    "updated_at"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique project identifier (UUID v4)"
    },
    "project_number": {
      "type": "string",
      "pattern": "^[A-Z0-9]{4,20}$",
      "description": "Human-readable project number (alphanumeric, 4-20 chars)"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Project name"
    },
    "org_id": {
      "type": "string",
      "format": "uuid",
      "description": "Organization/company ID (for RLS isolation)"
    },
    "status": {
      "type": "string",
      "enum": [
        "lead",
        "bidding",
        "awarded",
        "active",
        "on_hold",
        "completed",
        "cancelled",
        "archived"
      ],
      "description": "Current project status"
    },
    "type": {
      "type": "string",
      "enum": [
        "healthcare",
        "public_sector",
        "commercial",
        "residential",
        "industrial",
        "infrastructure"
      ],
      "description": "Project type/sector"
    },
    "budget": {
      "type": "object",
      "required": ["total", "currency"],
      "properties": {
        "total": {
          "type": "number",
          "minimum": 0,
          "description": "Total project budget"
        },
        "spent": {
          "type": "number",
          "minimum": 0,
          "description": "Amount spent to date"
        },
        "remaining": {
          "type": "number",
          "description": "Remaining budget (calculated)"
        },
        "currency": {
          "type": "string",
          "pattern": "^[A-Z]{3}$",
          "default": "USD",
          "description": "ISO 4217 currency code"
        }
      }
    },
    "schedule": {
      "type": "object",
      "required": ["start_date"],
      "properties": {
        "start_date": {
          "type": "string",
          "format": "date",
          "description": "Project start date (ISO 8601)"
        },
        "end_date": {
          "type": "string",
          "format": "date",
          "description": "Planned end date (ISO 8601)"
        },
        "actual_end_date": {
          "type": ["string", "null"],
          "format": "date",
          "description": "Actual completion date (ISO 8601)"
        },
        "duration_days": {
          "type": "integer",
          "minimum": 1,
          "description": "Planned duration in days"
        },
        "days_elapsed": {
          "type": "integer",
          "minimum": 0,
          "description": "Days elapsed since start"
        },
        "days_remaining": {
          "type": "integer",
          "description": "Days remaining until end date"
        }
      }
    },
    "location": {
      "type": "object",
      "properties": {
        "address": {
          "type": "string",
          "maxLength": 500
        },
        "city": {
          "type": "string",
          "maxLength": 100
        },
        "state": {
          "type": "string",
          "maxLength": 50
        },
        "zip": {
          "type": "string",
          "pattern": "^[0-9]{5}(-[0-9]{4})?$"
        },
        "country": {
          "type": "string",
          "pattern": "^[A-Z]{2}$",
          "default": "US",
          "description": "ISO 3166-1 alpha-2 country code"
        },
        "coordinates": {
          "type": "object",
          "properties": {
            "lat": {
              "type": "number",
              "minimum": -90,
              "maximum": 90
            },
            "lng": {
              "type": "number",
              "minimum": -180,
              "maximum": 180
            }
          }
        }
      }
    },
    "team": {
      "type": "object",
      "properties": {
        "project_manager_id": {
          "type": "string",
          "format": "uuid"
        },
        "superintendent_id": {
          "type": "string",
          "format": "uuid"
        },
        "estimator_id": {
          "type": "string",
          "format": "uuid"
        },
        "assigned_users": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uuid"
          },
          "uniqueItems": true
        }
      }
    },
    "client": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "maxLength": 200
        },
        "contact_name": {
          "type": "string",
          "maxLength": 200
        },
        "contact_email": {
          "type": "string",
          "format": "email"
        },
        "contact_phone": {
          "type": "string",
          "pattern": "^\\+?[1-9]\\d{1,14}$"
        }
      }
    },
    "health": {
      "type": "object",
      "description": "Calculated health metrics (see Health.json)",
      "properties": {
        "overall": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "budget": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "schedule": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "safety": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "quality": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "as_of": {
          "type": "string",
          "format": "date-time",
          "description": "Calculation timestamp (ISO 8601, UTC)"
        },
        "calc_version": {
          "type": "string",
          "pattern": "^v\\d+\\.\\d+$",
          "description": "Health calculation version (e.g., v1.0)"
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "maxLength": 50
          },
          "maxItems": 20
        },
        "custom_fields": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp (ISO 8601, UTC)"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp (ISO 8601, UTC)"
    },
    "created_by": {
      "type": "string",
      "format": "uuid",
      "description": "User ID who created the project"
    },
    "updated_by": {
      "type": "string",
      "format": "uuid",
      "description": "User ID who last updated the project"
    },
    "archived_at": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Archive timestamp (ISO 8601, UTC)"
    }
  },
  "additionalProperties": false
}